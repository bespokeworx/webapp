<core:View
        xmlns:core="sap.ui.core"
        xmlns:t="sap.ui.table"

        controllerName="sap.ui.demo.wt.Main"
        xmlns="sap.m"
        displayBlock="true"

        >

    <Shell showLogout="true" headerRightText="Hello...." >
        <App width="99%"  id="Main" >
            <pages>
                <Page title="Main">
                    <content>
                        <Panel headerText="Greetings"
                               class="sapUiResponsiveMargin"
                               width="auto">


                            <content>
                                <Button id="idGreet" text="Greet" press="onGreet"

                                        class="sapUiSmallMarginEnd"/>
                                <Input id="idName" placeholder="Enter Name"
                                       value="{/recipient/name}"
                                       valueLiveUpdate="true" width="60%">
                                </Input>

                                <Text
                                        text="Hello.."
                                        class="sapUiSmallMargin"/>

                                <Text
                                        text="{/recipient/name}"
                                        class="sapUiSmallMargin"/>



                                <Toolbar>
                                    <Title text="{i18n>invoiceListTitle}"/>
                                    <ToolbarSpacer/>
                                    <SearchField width="50%" search="onFilterInvoices"/>
                                </Toolbar>


                                <List
                                        id="list"
                                        headerText="{i18n>invoiceListTitle}"
                                            class="sapUiResponsiveMargin"
                                            width="auto"
                                            items="{invoice>/Invoices}" >
                                        <items>
                                            <ObjectListItem
                                                    title="{invoice>ProductName}"
                                                    number="{invoice>ExtendedPrice}"
                                                    numberState="Success"
			                                 />




                                        </items>
                                    </List>



                            </content>
                        </Panel>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>

</core:View>

